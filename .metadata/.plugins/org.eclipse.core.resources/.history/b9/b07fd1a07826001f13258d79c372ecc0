package poo;


import java.util.HashMap;
import java.util.Map;

class Funcionario {
    private String nome;
    private String sobrenome;
    private String alergias;
    private String problemasMedicos;
    private String telefone;
    private String email;

    public Funcionario(String nome, String sobrenome, String alergias, String problemasMedicos, String telefone, String email) {
        this.nome = nome;
        this.sobrenome = sobrenome;
        this.alergias = alergias;
        this.problemasMedicos = problemasMedicos;
        this.telefone = telefone;
        this.email = email;
    }

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getSobrenome() {
		return sobrenome;
	}

	public void setSobrenome(String sobrenome) {
		this.sobrenome = sobrenome;
	}

	public String getAlergias() {
		return alergias;
	}

	public void setAlergias(String alergias) {
		this.alergias = alergias;
	}

	public String getProblemasMedicos() {
		return problemasMedicos;
	}

	public void setProblemasMedicos(String problemasMedicos) {
		this.problemasMedicos = problemasMedicos;
	}

	public String getTelefone() {
		return telefone;
	}

	public void setTelefone(String telefone) {
		this.telefone = telefone;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}

    // Getters para acessar as informações do funcionário
}

class SistemaCartao {
    private Map<Integer, Funcionario> funcionarios;

    public SistemaCartao() {
        funcionarios = new HashMap<>();
    }

    public void adicionarFuncionario(int identificador, Funcionario funcionario) {
        funcionarios.put(identificador, funcionario);
    }

    public Funcionario obterFuncionario(int identificador) {
        return funcionarios.get(identificador);
    }

    // Método para gerar cartão com informações do funcionário
    public void gerarCartao(int identificador) {
        Funcionario funcionario = funcionarios.get(identificador);
        if (funcionario != null) {
            System.out.println("Cartão do Funcionário:");
            System.out.println("Nome: " + funcionario.getNome());
            System.out.println("Sobrenome: " + funcionario.getSobrenome());
            System.out.println("Alergias: " + funcionario.getAlergias());
            System.out.println("Problemas Médicos: " + funcionario.getProblemasMedicos());
            System.out.println("Telefone: " + funcionario.getTelefone());
            System.out.println("E-mail: " + funcionario.getEmail());
        } else {
            System.out.println("Funcionário não encontrado.");
        }
    }
}

public class MAIN {
    public static void main(String[] args) {
        SistemaCartao sistema = new SistemaCartao();

        // Exemplo de adição de funcionários
        Funcionario func1 = new Funcionario("João", "Silva", "Nenhuma", "Nenhum", "123456789", "joao@example.com");
        Funcionario func2 = new Funcionario("Maria", "Santos", "Poeira", "Nenhum", "987654321", "maria@example.com");

        sistema.adicionarFuncionario(1, func1);
        sistema.adicionarFuncionario(2, func2);

        // Exemplo de geração de cartão
        sistema.gerarCartao(1);
    }
}

